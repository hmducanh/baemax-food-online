<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/size30dp"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/food5"
        android:paddingLeft="@dimen/size10dp"
        android:text="Thay đổi mật khẩu"
        android:textColor="@color/Red"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:textColor="#FF9100"
        android:paddingLeft="10dp"
        android:background="#E41D1B1A"
        android:layout_marginTop="35dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FF9100"
        android:paddingLeft="10dp"
        android:text="Lưu ý:"
        android:layout_marginTop="60dp"/>
    <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textColor="#424242"
    android:paddingLeft="30dp"
    android:text="Mật khẩu mới nên bao gồm chữ và số"
    android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:paddingLeft="30dp"
        android:text="Mật khẩu tối thiểu 6 ký tự"
        android:textColor="#424242" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtPassOld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size20dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="@dimen/size15dp"
        android:hint="Mật khẩu cũ"
        android:inputType="textPassword"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="24dp"
        app:met_baseColor="@color/colorBlack"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/colorBlack"
        app:met_singleLineEllipsis="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtNhapPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size20dp"
        android:layout_marginTop="220dp"
        android:layout_marginRight="@dimen/size15dp"
        android:hint="Mật khẩu mới"
        android:inputType="textPassword"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="24dp"
        app:met_baseColor="@color/colorBlack"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/colorBlack"
        app:met_singleLineEllipsis="true" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edtNhaplaiPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size20dp"
        android:layout_marginTop="290dp"
        android:layout_marginRight="@dimen/size15dp"
        android:hint="Xác nhận mật khẩu mới"
        android:inputType="textPassword"
        android:text=""
        android:textColor="@color/colorBlack"
        android:textColorHint="@color/colorBlack"
        android:textSize="24dp"
        app:met_baseColor="@color/colorBlack"
        app:met_floatingLabel="highlight"
        app:met_primaryColor="@color/colorBlack"
        app:met_singleLineEllipsis="true" />


    <LinearLayout
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_marginTop="400dp">

        <Button
            android:id="@+id/btnDoiPass"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/duongvien_xanh"
            android:text="Đổi"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btnDongChangePass"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/size40dp"
            android:background="@drawable/duongvien_do_nhat"
            android:text="Đóng"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="15sp" />


    </LinearLayout>

</RelativeLayout>