<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="90dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"

    android:background="@drawable/food3"
    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xóa tài khoản Quán"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/nabila"


        />

    <LinearLayout
        android:id="@+id/lnKhungDangNhap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:orientation="vertical">


        <EditText
            android:id="@+id/edtEmailXoaQuan"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="@dimen/size15dp"
            android:drawableLeft="@drawable/ic_email_black_36dp"
            android:drawablePadding="@dimen/size10dp"
            android:hint="Email cần xóa"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:textColor="@color/colorGray"
            android:textColorHint="@color/colorGray"
            android:textSize="25sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnXoaQuan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/duongvien_do"
                android:gravity="center"
                android:text="Xóa"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>

